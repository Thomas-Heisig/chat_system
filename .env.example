# =============================================
# UNIVERSAL CHAT SYSTEM CONFIGURATION
# Version: 2.0.0
# =============================================

# =====================
# APPLICATION SETTINGS
# =====================
APP_NAME=Universal Chat System
APP_VERSION=2.0.0
APP_DESCRIPTION=Echtzeit Chat System mit AI, RAG, und Projektmanagement
APP_ENVIRONMENT=development  # development, production, staging
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-change-in-production
APP_URL=http://localhost:8000

# =====================
# SERVER CONFIGURATION
# =====================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true  # Auto-reload for development
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, console
LOG_FILE=logs/chat_system.log

# =====================
# DATABASE CONFIGURATION
# =====================
DATABASE_TYPE=sqlite  # sqlite, postgresql, mysql, mongodb
DATABASE_URL=chat.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chat_system
DATABASE_USER=chatuser
DATABASE_PASSWORD=chatpassword
DATABASE_TIMEOUT=30
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false  # SQL query logging
DATABASE_SQLITE_PATH=chat_system.db
DATABASE_SSL_ENABLED=false

# =====================
# AI / LLM CONFIGURATION
# =====================
AI_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_CONTEXT_MESSAGES=10
AI_AUTO_RESPOND=true

# =====================
# RAG (Retrieval Augmented Generation)
# =====================
RAG_ENABLED=true
VECTOR_DB_PROVIDER=chromadb  # chromadb, qdrant, pinecone, weaviate
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=8001
VECTOR_DB_API_KEY=
VECTOR_DB_COLLECTION=chat_documents
CHROMA_PERSIST_DIR=./chroma_data
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# =====================
# SECURITY & CORS
# =====================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
CORS_MAX_AGE=600

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# =====================
# WEBSOCKET SETTINGS
# =====================
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=30
WEBSOCKET_MAX_SIZE=10485760  # 10MB
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_RECONNECT_ATTEMPTS=5
WEBSOCKET_RECONNECT_DELAY=5000  # milliseconds

# =====================
# CHAT SPECIFIC SETTINGS
# =====================
CHAT_MAX_MESSAGE_LENGTH=1000
CHAT_MAX_USERNAME_LENGTH=50
CHAT_MESSAGE_HISTORY_LIMIT=1000
CHAT_RECENT_MESSAGES_LIMIT=50
CHAT_AUTO_CLEANUP_INTERVAL=3600  # seconds
CHAT_INACTIVE_USER_TIMEOUT=300  # seconds

# =====================
# SESSION & AUTHENTICATION
# =====================
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=3600
SESSION_HTTP_ONLY=true
SESSION_SECURE=false  # Set to true in production with HTTPS

AUTH_ENABLED=false
AUTH_JWT_SECRET=your-jwt-secret-key
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_EXPIRE_MINUTES=60

# =====================
# RATE LIMITING
# =====================
RATE_LIMIT_MESSAGES_PER_MINUTE=60
RATE_LIMIT_CONNECTIONS_PER_IP=10
RATE_LIMIT_BAN_DURATION=3600

# =====================
# NOTIFICATIONS & ALERTS
# =====================
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_SOUND=true
NOTIFICATIONS_DESKTOP=true
NOTIFICATIONS_DURATION=5000  # milliseconds

# =====================
# PERFORMANCE & CACHING
# =====================
CACHE_ENABLED=true
CACHE_TTL=300  # seconds
CACHE_MAX_SIZE=1000
CACHE_BACKEND=memory  # memory, redis

REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5

# =====================
# MONITORING & METRICS
# =====================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9091

# =====================
# BACKUP & MAINTENANCE
# =====================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours in seconds
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=backups/

AUTO_CLEANUP_ENABLED=true
AUTO_CLEANUP_INTERVAL=3600  # 1 hour

# =====================
# EXTERNAL SERVICES
# =====================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@chatsystem.com

# =====================
# UI & CLIENT SETTINGS
# =====================
UI_DEFAULT_THEME=light  # light, dark, contrast
UI_DEFAULT_LANGUAGE=de  # de, en, fr, es
UI_AUTO_SAVE_SETTINGS=true
UI_SHOW_ONLINE_USERS=true
UI_SHOW_MESSAGE_TIMESTAMPS=true
UI_ENABLE_TYPING_INDICATOR=true
UI_ENABLE_SOUND_EFFECTS=true
UI_ENABLE_EMOJI_PICKER=true
UI_ENABLE_FILE_UPLOAD=false
UI_MAX_FILE_SIZE=5242880  # 5MB

# =====================
# FEATURE FLAGS
# =====================
FEATURE_PROJECT_MANAGEMENT=true
FEATURE_TICKET_SYSTEM=true
FEATURE_FILE_UPLOAD=true
FEATURE_USER_AUTHENTICATION=true
FEATURE_PRIVATE_MESSAGES=false
FEATURE_GROUP_CHATS=false
FEATURE_FILE_SHARING=true
FEATURE_VOICE_MESSAGES=false
FEATURE_VIDEO_CALLS=false
FEATURE_SCREEN_SHARING=false
FEATURE_MESSAGE_EDITING=true
FEATURE_MESSAGE_DELETION=true
FEATURE_USER_PROFILES=true
FEATURE_CHAT_ROOMS=true
FEATURE_MESSAGE_REACTIONS=true
FEATURE_MESSAGE_PINNING=false
WEBSOCKET_ENABLED=true

# New Extension Feature Flags
FEATURE_WEBRTC=false
FEATURE_AVATARS=false
FEATURE_VIRTUAL_ROOMS=false
FEATURE_WIKI=true
FEATURE_DICTIONARY=true
FEATURE_PLUGINS=true
FEATURE_EMOTION_DETECTION=false
FEATURE_GESTURE_RECOGNITION=false

# =====================
# DATABASE AUTO-BACKUP
# =====================
DATABASE_AUTO_BACKUP=true
DATABASE_BACKUP_INTERVAL=86400  # 24 hours in seconds
DATABASE_BACKUP_RETENTION_DAYS=7

# =====================
# DOCKER CONFIGURATION
# =====================
DOCKER_IMAGE_NAME=chat-system
DOCKER_CONTAINER_NAME=chat_system
POSTGRES_PORT=5432
REDIS_PORT=6379
OLLAMA_PORT=11434
CHROMADB_PORT=8001
CHROMADB_AUTH=admin:admin

# =====================
# ADMINISTRATION
# =====================
ADMIN_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-in-production
ADMIN_EMAIL=admin@chatsystem.com

MODERATION_ENABLED=false
MODERATION_BAD_WORDS_FILTER=false
MODERATION_AUTO_BAN=false
MODERATION_REPORT_SYSTEM=false

# =====================
# INTEGRATIONS
# =====================
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com/chat-events
WEBHOOK_SECRET=your-webhook-secret

SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#chat-notifications

DISCORD_INTEGRATION=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# =====================
# ADVANCED SETTINGS
# =====================
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_MIN_SIZE=1024

GZIP_ENABLED=true
GZIP_LEVEL=6

SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

PROXY_HEADERS=true
TRUSTED_HOSTS=["localhost", "127.0.0.1", "::1"]

# =====================
# DEVELOPMENT SETTINGS
# =====================
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_SHOW_SQL_QUERIES=false
DEV_DEMO_DATA=false
DEV_FAKE_USERS=5
DEV_FAKE_MESSAGES=50

# =====================
# TESTING SETTINGS
# =====================
TEST_DATABASE_URL=test_chat.db
TEST_LOG_LEVEL=WARNING
TEST_TIMEOUT=30

# =============================================
# END OF CONFIGURATION
# =============================================

# Instructions:
# 1. Copy this file to .env
# 2. Adjust values according to your environment
# 3. For production, set APP_ENVIRONMENT=production
# 4. Generate secure keys for APP_SECRET_KEY and SESSION_SECRET
# 5. Enable SSL and set proper CORS origins for production
# 6. For Docker deployment, use docker-compose up -d
# 7. Configure AI by setting OLLAMA_BASE_URL and AI_ENABLED
# 8. For RAG, configure VECTOR_DB_PROVIDER and related settings